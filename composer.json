{
    "name": "bermudaphp/reflection",
    "description": "Powerful PHP reflection utility with caching and advanced metadata handling",
    "type": "library",
    "license": "MIT",
    "keywords": ["php", "reflection", "attributes", "metadata", "caching"],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Bermuda\\Reflection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bermuda\\Reflection\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
